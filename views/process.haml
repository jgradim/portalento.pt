.process

  .process-step-control.prev-step
    %i.fa.fa-chevron-left
  .process-step-control.next-step
    %i.fa.fa-chevron-right

  .process-panels
    - I18n.t('process.paragraphs').each.with_index do |p, step|
      .process-panel{ 'data-step' => step, class: ('selected' if step.zero?) }
        %i.fa{ class: I18n.t('process.images')[step] }
        %p= p

  .process-navigation
    - I18n.t('process.paragraphs').size.times do |step|
      .process-step{ 'data-step' => step, class: ('selected' if step.zero?) }

